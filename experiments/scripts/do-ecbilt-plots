#!/bin/bash

PATH=../../scripts:$PATH
i="ecbilt.nc"

make-plot $i ts-plots ts BlueRed fill 210,330,10 "Surface temperature (K)"
make-plot $i sp-plots sp:100.0 BlueRed lines 500,1100,20
make-plot $i pp-plots pp WhiteBlue fill 0,4000,200 "Total precipitation (mm/yr)"
make-plot $i evap-plots evap WhiteRed fill 0,5000,200 "Total evaporation (mm/yr)"
make-plot $i pmine-plots pp,evap BlueWhiteOrangeRed fill -3500,3500,500 "P-E (mm/yr)"
make-plot $i z500-plots z500 BlueRed lines 4500,6000,100
make-wind-plot $i $i 4
make-tau-plot $i 1
